{
	"name": "svelte4-electron",
	"description": "A SvelteKit app template with Electron support",
	"version": "0.0.1",
	"private": true,
	"main": "src/electron.js",
	"type": "module",
	"author": "shiki-01",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev npm run dev:all",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"npm run dev:svelte\" \"npm run dev:electron\"",
		"dev:svelte": "vite dev",
		"dev:electron": "electron src/electron.js",
		"build": "vite build",
		"build:win": "cross-env NODE_ENV=production vite build --mode win && electron-builder -w --config build.config.json",
		"build:mac": "cross-env NODE_ENV=production vite build --mode mac && electron-builder -m --config build.config.json",
		"build:all": "npm run build:win && npm run build:mac",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write ."
	},
	"browserslist": [
		"Chrome 89"
	],
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/eslint": "^8.56.7",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"svelte": "^4.2.7",
		"svelte-check": "^3.6.0",
		"tslib": "^2.4.1",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0-alpha.20",
		"vite": "^5.3.1"
	},
	"dependencies": {
		"@sveltejs/adapter-static": "^3.0.2",
		"concurrently": "^8.2.2",
		"cross-env": "^7.0.3",
		"electron": "^31.0.2",
		"electron-builder": "^24.13.3",
		"electron-connect": "^0.6.3",
		"electron-context-menu": "^4.0.0",
		"electron-packager": "^17.1.2",
		"electron-reloader": "^1.2.3",
		"electron-serve": "^2.0.0",
		"electron-updater": "^6.2.1",
		"electron-window-state": "^5.0.3"
	}
}
